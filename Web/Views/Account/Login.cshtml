@using System.Web.UI.WebControls
@model ChurchSMS_offline.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Security.cshtml";
}

<div class="form-box">
    <div class="header">
        <img style="width: 90%" src="~/Images/ChurchSMSLogo.svg" />
    </div>

    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
       
        <div class="body bg-orange text-center">

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user text-primary"></i></span>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Username" })
                </div>
                @*@Html.ValidationMessageFor(m => m.UserName)*@
            </div>
          
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key text-primary"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                </div>
                @*@Html.ValidationMessageFor(m => m.Password)*@
            </div>
            <div class="row">
                <div>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    Remember me
                </div>
            </div>
            <div class="form-group" style="margin-bottom:2px">
                <button type="submit" class="btn text-light-blue text-center">Sign in <i class="fa fa-arrow-circle-o-right"></i></button>
                <br />
            </div>
        </div>
    }

    <div class="footer">
        @if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
{
    <div class="alert alert-danger alert-login">
        @*<button type="button" class="close" data-dimiss="alert" aria-hidden="true">&times;</button>*@
        @Html.ValidationSummary(false, "")
    </div>
}


        @*<div class="alert alert-danger">
            
        </div>*@
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}