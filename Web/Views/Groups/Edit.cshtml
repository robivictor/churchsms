@model DataModels.Models.Group

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header {
    @*    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove-circle"></span></button>*@
    <h4 class="modal-title"><i class="fa fa-plus-circle"></i>Edit Group</h4>
}

@section actions {
    <a class="btn btn-default" href="@Url.Action("Groups", "Contacts")"><span class="fa fa-list"></span>&nbsp;Groups</a>
}

<div class="box box-primary">
    <div class="box-header">
        @*<h3 class="box-title">Enter project details</h3>*@
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="box-body">
            <div class="row center-block">
                <div class="col-md-6 box-content">
                    @Html.HiddenFor(h=>h.GroupID)
                    @Html.HiddenFor(h=>h.Status)
                    <div class="form-group">
                        @Html.LabelFor(model => model.GroupName, "Group Name")
                        @Html.TextBoxFor(model => model.GroupName, new { @class = "form-control", @placeholder = "Name", @required = "" })
                        @Html.ValidationMessageFor(model => model.GroupName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description)
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Description", @style = "height:100px"})
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>

                    <div class="">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary btn-sm pull-left"><i class="fa fa-save"></i>&nbsp;Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}